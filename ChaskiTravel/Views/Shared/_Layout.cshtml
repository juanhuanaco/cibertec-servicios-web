<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectAtipax</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styleAtipax.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styleAdmi.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectAtipax.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>


</head>
<body>
    <header class="headerAtipax">

        <div class="navAtipax">
            <nav>

                <a asp-action="" asp-controller="Viajes"><img class="logo" src="/img/logo-chazki.png" /></a>
                <div class="onlyMenu">
                    <ul>
                        @if (User.IsInRole("Cliente"))
                        {
                            <li><a asp-action="Inicio" asp-controller="Viajes">Inicio</a></li>
                        }
                        @if (User.IsInRole("Cliente"))
                        {
                            <li> <a asp-action="Contactenos" asp-controller="Viajes">Contáctenos</a></li>
                        }
                        @if (User.IsInRole("Cliente"))
                        {
                            <li><a asp-action="Portal" asp-controller="ChaskiTravel">Escoje tu destino</a></li>
                        }
                        @if (User.IsInRole("Administrador"))
                        {


                            <li><a asp-action="Create" asp-controller="ManteTour">Tour</a></li>

                        }
                        @if (User.IsInRole("Administrador"))
                        {
                            <li><a asp-action="Create" asp-controller="ManteHotel">Hotel</a></li>
                        }
                        @if (User.IsInRole("Administrador"))
                        {
                            <li><a asp-action="Create" asp-controller="ManteCategoria">Categoria</a></li>
                        }
                        @if (User.IsInRole("Administrador"))
                        {
                            <li><a asp-action="Create" asp-controller="ManteDestino">Destino</a></li>
                        }
                         @if (User.IsInRole("Administrador"))
                        {
                            <li><a asp-action="ConsultarPedido" asp-controller="Consultas">Consulta</a></li>
                        }
                      
                        <li> <a asp-action="Salir" asp-controller="Acceso">Salir<img src="~/img/exit.png" /></a></li>
                    </ul>
                </div>
            </nav>

        </div>

    </header>
       <section>
            @RenderBody()
        </section>

    <footer>

        <h4>Copyright © 2022 Atipax Group. Todos los derechos reservados.</h4>


        <ul class="redes">

            <li><h4>Redes sociales:</h4></li>
            <li><a><i class="fa-brands fa-facebook-f"></i></a></li>
            <li><a><i class="fa-brands fa-instagram"></i></a></li>

        </ul>

    </footer>
    
</body>
</html>
