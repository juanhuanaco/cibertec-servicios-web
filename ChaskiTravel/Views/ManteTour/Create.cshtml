@using ChaskiTravel.Models
@model ChaskiTravel.Models.Tour

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="tituloMantenimiento" style="color: white;">Mantenimiento Tour</h1>


@if (@ViewBag.mensaje != null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        @ViewBag.mensaje
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

    </div>
}
<div class="masterDivision" style="color: white;">
    <div class="createUno">
        <h2>Agregar Tour:</h2>
        <div class="formulario">
            <form asp-action="Create" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
                <div class="col-md-7">
                    <label asp-for="precioTour" class="form-label">Precio:</label>
                    <input asp-for="precioTour" class="form-control" />
                    <span asp-validation-for="precioTour" class="text-danger"></span>
                </div>
                <div class="col-md-7">
                    <label asp-for="descripcionTour" class="form-label">Descripción:</label>
                    <input asp-for="descripcionTour" class="form-control" />
                    <span asp-validation-for="descripcionTour" class="text-danger"></span>
                </div>
                <div class="form-group botonAgregar">
                    <input type="submit" value="Agregar Tour" class="btn btn-outline-success" />
                </div>
            </form>
        </div>
       
        
</div>
 
    <div class="listaDos">
        <div class="parcialEditar">
        @Html.Partial("_ParcialTour", ViewBag.tours as IEnumerable<Tour>)
                </div>
    </div>
</div>
