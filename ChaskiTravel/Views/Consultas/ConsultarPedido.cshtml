@model IEnumerable<ChaskiTravel.Models.Cliente>

@{
    ViewData["Title"] = "ConsultarPedido";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h1 class="tituloMantenimiento" style="color: white;">Consulta de pedidos</h1>
<div class="formulaConsulta" style="color: white;">
    <div class="expandir">
    <form>
        <div class="row g-3 align-items-center">
            <div class="col-auto">
                <label for="inputPassword6" class="col-form-label">Ingrese una fecha</label>
            </div>
            <div class="col-auto">
            @Html.TextBox("fecha")
            </div>
            <div class="col-auto">
                    <button  class="btn btn-outline-success btCiudad">BUSCAR</button>
            </div>
        </div>
    </form>
    </div>
</div>
<div class="tablaConsulta" style="color: white;">
    <div class="parcialEditar">
        <table class="table table-striped">
    <thead >
        <tr>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.idpedido)
            </th>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.fpedido)
            </th>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.apePaterno)
            </th>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.apeMaterno)
            </th>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.dni)
            </th>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.telefono)
            </th>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.email)
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.idpedido)
            </td>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.fpedido)
            </td>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.apePaterno)
            </td>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.apeMaterno)
            </td>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.dni)
            </td>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.email)
            </td>
          
        </tr>
}
    </tbody>
</table>
    </div>
</div>